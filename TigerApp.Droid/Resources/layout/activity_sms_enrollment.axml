<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <LinearLayout
        android:id="@+id/imgTigerLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F3F3F2">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/tiger_title"
                android:layout_gravity="center" />
        </FrameLayout>
        <ImageView
            android:id="@+id/imgTigerLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/tiger_subtitle"
            android:layout_gravity="center" />
    </LinearLayout>
    <tigerapp.droid.ui.TigerTextView
        android:id="@+id/txtMainMsg"
        style="@style/PageDefaultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="@string/sms_verify_message" />
    <EditText
        android:id="@+id/txtSmsCodeInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/txt_phone_input_back"
        android:drawableLeft="@drawable/ic_sms"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_sms"
        android:gravity="center"
        android:hint="@string/hint_verivication_code"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:textColor="@color/txt_black"
        android:textColorHint="@color/txt_tip" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/horizontal_line" />
    <Button
        android:id="@+id/btnSmsVerify"
        style="@style/ButtonsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_sms_login"
        android:text="@string/btn_sms_verify" />
</LinearLayout>